{
  "name": "koatty-cli-monorepo",
  "version": "1.0.0",
  "description": "Koatty CLI 工具的 Monorepo 仓库",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter \"./packages/**\" run build",
    "dev": "pnpm -r --filter \"./packages/**\" run dev",
    "clean": "pnpm -r --filter \"./packages/**\" run clean",
    "lint": "eslint --ext .ts,.js packages/*/src",
    "format": "prettier --write \"packages/*/src/**/*.{ts,js,json}\"",
    "test": "pnpm -r --filter \"./packages/**\" run test",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bash scripts/release.sh",
    "release:patch": "bash scripts/release.sh",
    "release:minor": "bash scripts/release.sh $PKG minor",
    "release:major": "bash scripts/release.sh $PKG major",
    "release:pre": "bash scripts/release.sh $PKG prerelease",
    "sync": "bash scripts/sync-standalone.sh"
  },
  "keywords": [
    "koatty",
    "cli",
    "monorepo",
    "template"
  ],
  "author": "Koatty Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "standard-version": "^9.5.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}

